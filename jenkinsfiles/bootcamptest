pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh 'mvn tst'
            }
        }
        stage('Build') {
            steps {
                when {
                    expression { currentBuild.result == 'SUCCESS'}
                }
                sh 'mvn install'
            }
        }
        stage('Deploy') {
            steps {
                when {
                    expression { currentBuild.result == 'SUCCESS'}
                }
                sh 'mvn deploy'
            }
        }
    }
}